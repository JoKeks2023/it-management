# Server configuration
PORT=3001

# Shelf API configuration
# Get your API token from https://app.shelf.nu/settings/api
SHELF_API_TOKEN=your_shelf_api_token_here
SHELF_API_BASE_URL=https://api.shelf.nu

# Database path (relative to backend directory)
DB_PATH=./data/tickets.db

# Upload directory (relative to backend directory)
UPLOAD_DIR=./uploads

# Maximum file size for uploads (in bytes, default 10MB)
MAX_FILE_SIZE=10485760

# Frontend URL for CORS (change in production)
FRONTEND_URL=http://localhost:5173
